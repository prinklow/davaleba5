<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background ="#D5FFEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/runRange"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/run_range"
        android:inputType="number"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/swimRange"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/swim_range"
        android:inputType="number"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@+id/runRange" />

    <EditText
        android:id="@+id/calorie"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/calorie"
        android:inputType="number"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@+id/swimRange" />

    <Button
        android:id="@+id/save"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/purple_200"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calorie"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/stats"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calorie" />

</androidx.constraintlayout.widget.ConstraintLayout>
